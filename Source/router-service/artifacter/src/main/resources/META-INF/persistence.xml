<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="SWRPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.fpt.router.artifacter.model.entity.Route</class>
        <class>com.fpt.router.artifacter.model.entity.Station</class>
        <class>com.fpt.router.artifacter.model.entity.PathInfo</class>
        <class>com.fpt.router.artifacter.model.entity.Trip</class>
        <class>com.fpt.router.artifacter.model.entity.Connection</class>
        <class>com.fpt.router.artifacter.model.entity.Staff</class>
        <class>com.fpt.router.artifacter.model.entity.Notification</class>
        <class>com.fpt.router.artifacter.model.entity.RouteNotification</class>
        <class>com.fpt.router.artifacter.model.entity.StationNotification</class>
        <class>com.fpt.router.artifacter.model.entity.TripNotification</class>

        <properties>
            <property name="jadira.usertype.autoRegisterUserTypes" value="true"/>
            <property name="hibernate.archive.autodetection" value="class, hbm" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.show_sql" value="false"/>
            <property name="hbm2ddl.auto" value="update" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/routerdb?useUnicode=true&amp;characterEncoding=UTF-8"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
            <property name="hibernate.connection.pool_size" value="2000"/>



        </properties>
    </persistence-unit>
</persistence>
